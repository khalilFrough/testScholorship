-flash.each do |name, msg|
    -if msg.is_a?(String)
        %div{:class => "alert alert-#{name.to_s == 'notice' ? 'success' : 'danger'}", :role => "alert"}
            %a.close{"aria-hidden" => "true", "data-dismiss" => "alert", :href => "#"} x
            = content_tag :div, msg, :id => "flash_#{name}"